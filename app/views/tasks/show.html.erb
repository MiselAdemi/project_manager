<div class="card show-card">
  <div class="card-body">
    <h4 class="card-title"><%= @task.name %></h4>
    <h6 class="card-subtitle mb-2 text-muted">Created <%= @task.created_at.strftime("%Y-%m-%d") %></h6>
    <p class="card-text"><%= @task.description %></p>
  </div>
</div>

<h4>Comments</h4>
<% @task.comments.each do |comment| %>
<div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= comment.body %></h4>
    <h6 class="card-subtitle mb-2 text-muted">Posted <%= comment.created_at.strftime("%Y-%m-%d") %> by <%= User.find(comment.user_id).email %></h6>
  </div>
</div>
<% end %>

<%= render partial: "comments/form", locals: { commentable: @task } %>
