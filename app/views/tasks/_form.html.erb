<%= form_for([@project, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :priority %><br>
    <%= f.select :priority, Task.priorities.keys, class: "form-control" %>
  </div>
  <% unless @task.new_record? %>
    <div class="form-group">
      <%= f.label :done %><br>
      <%= f.check_box :done %>
    </div>
  <% end %>
  <br>
  <div class="form-group">
    <%= f.submit class: "btn btn-lg btn-outline-primary" %>
    <%= link_to "Back", project_tasks_path(@project), class: "btn btn-lg btn-outline-secondary" %>
  </div>
<% end %>
